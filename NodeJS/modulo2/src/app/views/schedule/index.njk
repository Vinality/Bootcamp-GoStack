{% extends "_layouts/default.njk" %}

{% block body %}
  <div class='content'>
    <strong>Bem vindo, {{provider.name}}</strong>
    <strong>Listagem de Hor√°rios Ocupados</strong>
    <div class='provider'>
      <div>
        <img src='/files/{{provider.avatar}}'/>
        <strong>{{provider.name}}</strong>
      </div>
    </div>

    <form>
      <input type='text' class='flatpickr' placeholder='Escolha uma data'>
      <div id="hours"></div>
    </form>

    <a href="/app/dashboard" class="logout">Voltar</a>
  </div>

  <script type='text/javascript'>
    flatpickr('.flatpickr', {
      minDate: new Date(),
      dateFormat: 'd/m/Y',
      onChange: function(date) {
        fetch(`/app/check/{{provider.id}}?date=${date[0].getTime()}`).then(function (response){
          response.text().then(function (html) {
            document.getElementById('hours').innerHTML = html;
          })
        })
      }
    })
  </script>
{% endblock %}